<div class="container-fluid container-fixed-lg bg-white">
    <!-- START PANEL -->
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <!-- <div class="panel-title ">Pages Default Tables Style
      </div> -->
            <div class="btn-group">
                <div class="col-md-4 p-l-0">
                    <div class="input-group">
                        <input type="text" id="search-table" class="form-control">
                        <span class="input-group-addon primary">

                            <i class="fa fa-search"></i>
                        </span>
                    </div>
                </div>
                <div class="col-md-offset-6 col-md-2 pull-right">
                    <div class="input-group">
                        <a href="/add-role" class="btn btn-primary">Add roles</a>
                    </div>
                </div>

            </div>

            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <table class="table table-striped tableWithSearch">
                <thead>
                    <tr>
                        <th>NAME</th>
                        <th>Created At</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < roles.length; i++) { %>
                        <tr class="gradeC">
                            <td>
                                <%= roles[i].name %>
                            </td>
                            <td>
                                <%= dateFormat(roles[i].created_at,"dd/mm/yyyy hh:mm:ss")  %>
                            </td>
                            <td class="center">
                                <div class="btn-group">
                                    <a href="/view-role/<%= roles[i].id %>" class="btn btn-success" data-toggle="tooltip" data-original-title="View">
                                        <i class="fa fa-expand"></i>
                                    </a>
                                    <a href="/edit-role/<%= roles[i].id %>" class="btn btn-success" data-toggle="tooltip" data-original-title="Edit">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="javascript:;" data-act="delete-modal" data-parent-elm="tr" data-remove-parent="true" data-url="/delete" data-method="POST"
                                        data-post-id="<%=roles[i].id%>" class="btn btn-danger" data-toggle="tooltip" data-original-title="Delete">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- END PANEL -->
</div>
<!-- end table -->