<div class="container-fluid container-fixed-lg bg-white">
    <!-- START PANEL -->
    <div class="panel panel-transparent">
        <div class="panel-heading">
            <!-- <div class="panel-title ">Pages Default Tables Style
      </div> -->
            <div class="btn-group">
                <div class="col-md-4 p-l-0">
                    <div class="input-group">
                        <input type="text" id="search-table" class="form-control">
                        <span class="input-group-addon primary">

                            <i class="fa fa-search"></i>
                        </span>
                    </div>
                </div>

            </div>

            <div class="clearfix"></div>
        </div>
        <div class="panel-body">
            <table class="table table-striped tableWithSearch">
                <thead>
                    <tr>
                        <th>TXID</th>
                        <th>AMOUNT</th>
                        <th>STATE</th>
                        <th>CONFIRMATION</th>
                        <th>RECEIVE AT</th>
                        <th>DONE AT</th>
                        <th style="width: 360px;">ACTION TO BE DONE</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < payments.length; i++) { %>
                        <tr class="gradeC">
                            <td>
                                <%= payments[i].txid %>
                            </td>
                            <td>
                                <%= payments[i].amount %>
                            </td>
                            <td>
                                <%= payments[i].state %>
                            </td>
                            <td>
                                <%= payments[i].confirmations %>
                            </td>
                            <td>
                                <%= payments[i].receive_at %>
                            </td>
                            <td>
                                <%= payments[i].done_at %>
                            </td>

                            <td class="center">
                                <div class="btn-group">
                                    <a href="/view-payment/<%= payments[i].id %>" class="btn btn-success" title="View">
                                        <i class="fa fa-expand"></i>
                                    </a>

                                    <% if(payments[i].status==1){ %>
                                        <a href="javascript:;" class="btn btn-danger" title="Deactivate" data-inline-loader="1" data-post-type="1" data-parent-elm="tr"
                                            data-url="/deactivate-payment" data-real-target="#deactive-<%= payments[i].id%>" data-act="delete-modal"
                                            data-method="POST" data-post-payment_id="<%=payments[i].id%>" data-post-status="1" data-reload-on-success="true">
                                            <i class="fa fa-ban" aria-hidden="true"></i>
                                        </a>
                                        <% } else{ %>
                                            <a href="javascript:;" title="Activate" data-parent-elm="tr" data-real-target="#deactive-<%= payments[i].id%>" data-url="/deactivate-payment"
                                                data-post-type="1" data-post-status="2" data-inline-loader="1" data-method="POST"
                                                data-post-payment_id="<%=payments[i].id%>" class="btn btn-danger" data-act="delete-modal"
                                                data-reload-on-success="true">
                                                <i class="fa fa-check" aria-hidden="true"></i>
                                            </a>
                                            <% }%>

                                </div>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- END PANEL -->
</div>
<!-- end table -->